# ===================================
# PUBLIC VIEWING (No Auth Required)
# ===================================
# These control what repository is shown when users browse without logging in
NEXT_PUBLIC_GITHUB_OWNER=aigentone
NEXT_PUBLIC_GITHUB_REPO=dahao_0
NEXT_PUBLIC_GITHUB_BRANCH=main
NEXT_PUBLIC_DOCUMENTS_PATH=dahao-template

# ===================================
# GITHUB OAUTH (Required for Editing)
# ===================================
# Get these from https://github.com/settings/developers
# Only needed if you want users to be able to edit/contribute
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github

# ===================================
# AUTHENTICATED OPERATIONS 
# ===================================
# These control where authenticated users' changes go
# If not set, defaults to the public viewing repo
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name

# Optional: Git provider settings
GIT_PROVIDER=github
GIT_OWNER=your_github_username